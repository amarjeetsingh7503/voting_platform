<%- include('layouts/header') %>
<link rel="stylesheet" href="/css/style.css" />
</head>
<div class="create-poll">

<h2>Create a New Poll</h2>

<form action="/polls/new" method="POST">
  <div class="mb-3">
    <label for="question" class="form-label">Poll Question:</label>
    <input type="text" id="question" name="question" class="form-control" required />
  </div>

  <div id="options" class="mb-3">
    <div>
      <label for="option1" class="form-label">Option 1:</label>
      <input type="text" id="option1" name="options" class="form-control" required />
    </div>
    <div>
      <label for="option2" class="form-label">Option 2:</label>
      <input type="text" id="option2" name="options" class="form-control" required />
    </div>
  </div>

  <button type="button" id="addOptionBtn" class="btn btn-primary">Add Option</button>
  <button type="submit" class="btn btn-primary">Create Poll</button>
</form>
<footer>
  <p>&copy; 2024 Voting Platform</p>
</footer>
</div>
<!-- <%- include('layouts/footer') %> -->
<script>
  document
    .getElementById("addOptionBtn")
    .addEventListener("click", function () {
      const optionsDiv = document.getElementById("options");
      const newOptionIndex = optionsDiv.children.length + 1;

      const newOptionDiv = document.createElement("div");
      newOptionDiv.innerHTML = `
      <label for="option${newOptionIndex}" class="form-label">Option ${newOptionIndex}:</label>
      <input type="text" id="option${newOptionIndex}" name="options" class="form-control" required>
    `;

      optionsDiv.appendChild(newOptionDiv);
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

